{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": false,
		"outDir": "dist",
		"rootDir": "src",
		"types": ["bun-types"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
